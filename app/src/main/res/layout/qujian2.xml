<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#1696d3">
            <TextView
                android:id="@+id/addinlist_tv_ps"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/add"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:textColor="#fff"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/backtv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/btn2"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="派送"
                android:textColor="#fff"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#fff">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="快递单号"
                android:textColor="#000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/danhaotv_psa"
                android:background="#00000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="89dp"
                android:layout_marginRight="80dp"
                android:gravity="center_vertical"
                android:textColor="#000"
                android:hint="请扫描"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/scannertv_psa"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/textView2"
                android:background="@mipmap/btn" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#e8e8e8" />

    </LinearLayout>

    <ListView
        android:id="@+id/lv_psa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="@+id/kongxia"
        android:layout_marginBottom="180dp"
        android:layout_marginTop="108dp" />

    <View
        android:id="@+id/kongxia"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="@+id/anniull"
        android:layout_marginBottom="50dp"
        android:background="#e8e8e8" />
    //底部按钮容器
<LinearLayout
    android:layout_alignParentBottom="true"
    android:layout_width="wrap_content"
    android:layout_marginBottom="50dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="#e9e9e9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#fff">

        <TextView
            android:id="@+id/jianshu"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="快递件数"
            android:textColor="#000"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/shulianget_qj"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/jianshu"
            android:layout_marginLeft="95dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:text="1"
            android:textColor="#000"
            android:textSize="18dp" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="#e9e9e9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#fff">

        <TextView
            android:id="@+id/jiesuanfangshi"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="结算方式"
            android:textColor="#000"
            android:textSize="18dp" />

        <RadioGroup
            android:id="@+id/jiesuanfangshirg_qja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb1_xianjie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:checked="true"
                android:text="现结" />

            <RadioButton
                android:id="@+id/rb2_daofu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到付" />

            <RadioButton
                android:id="@+id/rb3_yuejie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月结" />
        </RadioGroup>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:background="#e9e9e9" />
</LinearLayout>
    <LinearLayout
        android:id="@+id/anniull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/confirm_tv_qja"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@mipmap/btn4"
            android:gravity="center_horizontal|center_vertical"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="20dp" />


    </LinearLayout>

</RelativeLayout>