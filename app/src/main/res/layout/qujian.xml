<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#1696d3">

            <TextView
                android:id="@+id/backtv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/btn2"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="取件"
                android:textColor="#fff"
                android:textSize="20dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="200dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/logo" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="#e9e9e9" />
        //快递单号

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#fff">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="快递单号"
                android:textColor="#000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/danhaotv_qja"
                android:layout_width="match_parent"
                android:layout_marginRight="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="95dp"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:hint="请扫描"
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/scanner_qja"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/btn" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="#e9e9e9" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#fff">

            <TextView
                android:id="@+id/jianshu"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="快递件数"
                android:textColor="#000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/shulianget"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/jianshu"
                android:layout_marginLeft="95dp"
                android:background="#00000000"
                android:gravity="center_vertical"
                android:text="1"
                android:textColor="#000"
                android:textSize="18dp" />
        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="#e9e9e9" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#fff">

            <TextView
                android:id="@+id/jiesuanfangshi"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="结算方式"
                android:textColor="#000"
                android:textSize="18dp" />

            <RadioGroup
                android:id="@+id/jiesuanfangshirg_qja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb1_xianjie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:checked="true"
                    android:text="现结" />

                <RadioButton
                    android:id="@+id/rb2_daofu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="到付" />

                <RadioButton
                    android:id="@+id/rb3_yuejie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月结" />
            </RadioGroup>

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:background="#e9e9e9" />



    </LinearLayout>

    <TextView
        android:id="@+id/confirm_tv_qja"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/btn4"
        android:gravity="center_horizontal|center_vertical"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="20dp" />
</RelativeLayout>