<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="110dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#1696d3">

            <TextView
                android:id="@+id/backtv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/btn2"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="送达"
                android:textColor="#fff"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="#fff">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="快递单号"
                android:textColor="#000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/danhaotv_sda"
                android:layout_width="match_parent"
                android:layout_marginRight="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="89dp"
                android:layout_centerVertical="true"
                android:background="#00000000"
                android:hint="请扫描"
                android:singleLine="true"
                android:textColor="#000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/scannertv_sda"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@mipmap/btn" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#e8e8e8" />

        <ImageView
            android:id="@+id/pictor_iv_sda"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/paizhaotv_sda"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/btn4"
        android:gravity="center"
        android:text="拍照"
        android:textColor="#fff"
        android:textSize="20dp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="#e9e9e9" />

    <TextView
        android:id="@+id/qianshoutv_sda"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/btn4"
        android:gravity="center"
        android:text="签收"
        android:textColor="#fff"
        android:textSize="20dp" />

</RelativeLayout>
